<%= simple_form_for @job , :html => { :class => 'form-horizontal' } , html: {multipart: true } do |f| %>
    <%= f.collection_select :category_id, Category.all, :id, :name ,{promt: "choose a category" }, input_html: {class: "dropdown-menu" } %>
    <%= f.input :title , input_html: {class: "form-control" } %>
    <%= f.input :description ,input_html: {class: "form-control" } %>
    <%= f.input :image, as: :file %>
    <%= f.button :submit , class: "btn btn-default" %>
<% end %>    